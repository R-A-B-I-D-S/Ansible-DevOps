version: v3

teleport:
  nodename: {{ teleport_nodename | default(inventory_hostname) }}
  data_dir: /var/lib/teleport
  join_params:
    method: token
    token_name: "{{ teleport_invite_token }}"
  proxy_server: teleport.tgvpnbot.com:443
  ca_pin: "sha256:15069b6d75043ab3cc8ebf8a312e6f95b2d82c30bee210e49b5f7e6498c378b9"
  log:
    output: stderr
    severity: INFO
    format:
      output: text
  diag_addr: ""

auth_service:
  enabled: "no"

proxy_service:
  enabled: "no"

ssh_service:
  enabled: "yes"
  labels:
    {% for key, value in teleport_labels.items() %}
    {{ key }}: "{{ value }}"
    {% endfor %}
